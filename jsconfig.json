{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": false, // TODO: FIX THIS
    "noImplicitOverride": false, // TODO: FIX THIS
    "noPropertyAccessFromIndexSignature": false, //TODO: FIX THIS,
    "noImplicitReturns": false, //TODO: FIX THIS,
    "noFallthroughCasesInSwitch": false, //TODO: FIX THIS
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2022", "dom"],
    "checkJs": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}